(class Shape ()
  (method area () 0))

(class Rectangle (extends Shape)
  (field width 0)
  (field height 0)
  
  (constructor (w h)
    (set this width w)
    (set this height h))
  
  (method area () 
    (* (get this width) (get this height))))

(class Circle (extends Shape)
  (field radius 0)
  
  (constructor (r)
    (set this radius r))
  
  (method area ()
    (* 3.14159 (get this radius) (get this radius))))

(define rect (new Rectangle 5 10))
(println (string-append "Rectangle area: " (number->string (send rect area))))

(define circle (new Circle 7))
(println (string-append "Circle area: " (number->string (send circle area))))